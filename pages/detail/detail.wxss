}
.box .goodinfo-box .freight .promote-sign {
  left: 0;
  top: 31rpx;
}
.box .goodinfo-box .freight .freight-status {
  width: 100%;
  height: 100%;
  display: flex;
  flex-direction: column;
  justify-content: center;
  font-size: 23rpx;
  color: #3c3939;
  margin-left: 96rpx;
}
