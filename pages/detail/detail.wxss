.box {
  width: 100%;
  /* height: 1250rpx; */
}
.box .placeholder {
  width: 100%;
  height: 50rpx;
}
.box .header {
  width: 100%;
  height: 763rpx;
  position: relative;
}
.box .header .header-bgi {
  width: 100%;
  height: 100%;
  position: absolute;
  left: 0;
  top: 0;
  z-index: -2;
}
.box .header .nav-bar {
  width: 61%;
  display: flex;
  justify-content: space-between;
  font-size: 42rpx;
  color: #fff;
}
.box .header .nav-bar .van-icon-arrow-left {
  margin-left: 20rpx;
  font-size: 40rpx;
}
.box .detailpage-pricebox {
  width: 100%;
  margin: 0 auto;
  height: 103rpx;
  background-color: #fff;
  position: absolute;
  left: 0;
  top: 742rpx;
  border-radius: 20rpx 20rpx 0 0;
  display: flex;
  align-items: center;
  justify-content: space-between;
  font-size: 48rpx;
  color: #ff302d;
}
.box .detailpage-pricebox .price-box {
  display: flex;
  align-items: baseline;
  margin-left: 10rpx;
}
.box .detailpage-pricebox .small-price {
  font-size: 20rpx;
  color: #ff302d;
}
.box .detailpage-pricebox .rightbox {
  display: flex;
  width: 150rpx;
  justify-content: space-between;
  margin-right: 10rpx;
}
.box .detailpage-pricebox .rightbox .markdown-box {
  /* width: 80rpx;
        height: 100rpx; */
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}
.box .detailpage-pricebox .rightbox .markdown-box image {
  width: 25rpx;
  height: 25rpx;
}
.box .detailpage-pricebox .rightbox .markdown-box view {
  font-size: 20rpx;
  color: #4a4848;
}
.box .detailpage-pricebox .rightbox .care-box {
  /*   width: 100rpx;height: 100rpx; */
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}
.box .detailpage-pricebox .rightbox .care-box image {
  width: 29rpx;
  height: 25rpx;
}
.box .detailpage-pricebox .rightbox .care-box view {
  font-size: 20rpx;
  color: #4a4848;
}
.box .vip-details {
  width: 704rpx;
  height: 55rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  background-color: #f7f8f9;
  border-radius: 6rpx;
  margin: 0 auto ;
  margin-top: 103rpx;
  font-family: SourceHanSansCN-Medium;
  font-size: 22rpx;
  color: #777676;
}
.box .vip-details .vd-content {
  display: flex;
  margin-left: 10rpx;
}
.box .vip-details .getmore {
  margin-right: 10rpx;
}
.box .vip-details image {
  width: 28rpx;
  height: 22rpx;
  margin-left: 10rpx;
  margin-right: 10rpx;
}
.box .good-title-box {
  width: 95%;
  margin: 0 auto;
  margin-top: 20rpx;
  display: flex;
  justify-content: space-between;
  position: relative;
}
.box .good-title-box .sign {
  width: 63rpx;
  height: 30rpx;
  position: absolute;
  left: 0;
  top: 0;
  margin-right: 20rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  background-image: linear-gradient(90deg, #ff6105 0%, #ff3826 100%), linear-gradient(#010101, #010101);
  background-blend-mode: normal, 
        normal;
  border-radius: 14.5rpx;
  font-size: 20rpx;
  color: #fff;
}
.box .good-title-box .good-title {
  margin-left: 66rpx;
  font-size: 26rpx;
  color: #3c3939;
}
.box .separator {
  width: 750rpx;
  height: 20rpx;
  background-color: #f7f8f9;
  margin-bottom: 40rpx;
}
.box .promotion-box {
  width: 100%;
  position: relative;
  margin: 40rpx 0;
}
.box .promotion-box .pb-firstline {
  width: 76%;
  margin: 0 auto;
  display: flex;
}
.box .promotion-box .pb-firstline .discount-sign1 {
  width: 124rpx;
  height: 32rpx;
  background-color: #ffe9e9;
  border-radius: 6rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  font-family: SourceHanSansCN-Medium;
  font-size: 20rpx;
  color: #ff5b57;
}
.box .promotion-box .pb-firstline .discount-note1 {
  margin-left: 40rpx;
  font-size: 23rpx;
  color: #504e4e;
}
.box .promotion-box .pb-secondline {
  width: 76%;
  margin: 0 auto;
  display: flex;
  margin-top: 20rpx;
}
.box .promotion-box .pb-secondline .discount-sign2 {
  width: 62rpx;
  height: 32rpx;
  background-color: #ffe9e9;
  border-radius: 6rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  font-family: SourceHanSansCN-Medium;
  font-size: 20rpx;
  color: #ff5b57;
}
.box .promotion-box .pb-secondline .discount-note2 {
  margin-left: 40rpx;
  font-size: 23rpx;
  color: #504e4e;
}
.box .promote-sign {
  position: absolute;
  width: 100%;
  display: flex;
  justify-content: space-between;
  left: 0;
  top: -5rpx;
}
.box .promote-sign .left-sign {
  font-size: 24rpx;
  color: #b8b8b8;
  margin-left: 24rpx;
}
.box .promote-sign .right-sign {
  margin-right: 10rpx;
  display: flex;
  align-items: center;
}
.box .promote-sign .right-sign view {
  width: 8rpx;
  height: 8rpx;
  border-radius: 100%;
  margin-right: 10rpx;
  display: flex;
}
.box .promote-sign .right-sign view:first-child {
  background-color: #dcdcdc;
}
.box .promote-sign .right-sign view:nth-child(2) {
  background-color: #c4c4c4;
}
.box .promote-sign .right-sign view:last-child {
  background-color: #909090;
}
.box .goodinfo-box {
  font-size: 23rpx;
  color: #3c3939;
  position: relative;
}
.box .goodinfo-box .combo {
  width: 100%;
  height: 94rpx;
  display: flex;
  align-items: center;
}
.box .goodinfo-box .combo .promote-sign {
  left: 0;
  top: 32rpx;
}
.box .goodinfo-box .combo .combo-name {
  margin-left: 96rpx;
