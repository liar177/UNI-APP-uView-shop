}
.box .goodinfo-box .send .promote-sign {
  left: 0;
  top: 51rpx;
}
.box .goodinfo-box .send .address {
  width: 100%;
  height: 100%;
  display: flex;
  flex-direction: column;
  justify-content: center;
  font-size: 23rpx;
  color: #3c3939;
  margin-left: 96rpx;
  border-bottom: 1px solid #f6f6f6;
}
.box .goodinfo-box .send .address .add-secondline {
  margin-top: 40rpx;
  display: flex;
  font-size: 23rpx;
}
.box .goodinfo-box .send .address .add-secondline view {
  margin-left: 20rpx;
  color: #bfbfbf;
