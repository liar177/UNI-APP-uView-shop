.box {
  width: 100%;
  background-color: #f7f8f9;
}
.box .header {
  width: 100%;
  position: relative;
}
.box .header .header-bgi {
  width: 100%;
  height: 620rpx;
  position: absolute;
  left: 0;
  top: 0;
}
.box .header #input {
  position: absolute;
  left: 16rpx;
  top: 52rpx;
  width: 450rpx;
  height: 70rpx;
  background-color: #ffffff;
  border-radius: 10px 4px 20px 10px;
}
.box .header #input .search-text {
  position: absolute;
  left: 80rpx;
  top: 15rpx;
  width: 340rpx;
  height: 40rpx;
  border: transparent;
}
.box .header #input .icon-search {
  position: absolute;
  left: 30rpx;
  top: 23rpx;
}
.box .header .placeholder {
  width: 100%;
  height: 140rpx;
  background-color: #fff;
}
.box .header .discover-tabs .van-tabs__scroll {
  background-color: transparent !important;
  /*    .van-ellipsis{
          color: #fff !important;
          font-weight: bold;
        } */
}
.box .header .discover-tabs .van-tabs__scroll .van-tabs__line {
  background-color: #fff !important;
}
.box .header .dis-banner {
  width: 90%;
  height: 545rpx;
  margin: 0 auto;
  margin-top: 40rpx;
}
.box .header .dis-banner swiper-item image {
  width: 100%;
  height: 100%;
}
.box .header .dis-banner swiper-item .dis-banner2 {
  width: 100%;
  height: 100%;
}
.box .header .dis-banner swiper-item .dis-banner2 .dis-top {
  width: 100%;
  height: 50%;
  background-color: #fe992a;
}
.box .header .dis-banner swiper-item .dis-banner2 .dis-bom {
  width: 100%;
  height: 50%;
  background-color: #fff;
}
.box .header .dis-banner swiper-item .dis-banner3 {
  width: 100%;
  height: 100%;
}
.box .header .dis-banner swiper-item .dis-banner3 .dis-top {
  width: 100%;
  height: 50%;
  background-color: #02d158;
}
.box .header .dis-banner swiper-item .dis-banner3 .dis-bom {
  width: 100%;
  height: 50%;
  background-color: #fff;
}
.box .discover-modules {
  width: 90%;
  margin: 0 auto;
  margin-top: 40rpx;
  background-color: #fff;
}
.box .discover-modules .discover-module {
  width: 100%;
}
.box .discover-modules .discover-module .module-title {
  width: 90%;
  height: 60rpx;
  margin: 0 auto;
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.box .discover-modules .discover-module .module-title .module-title-name {
  font-size: 26rpx;
  color: #4a4848;
}
.box .discover-modules .discover-module .module-title .refresh {
  display: flex;
  font-family: SourceHanSansCN-Medium;
  font-size: 22rpx;
  color: #9e9e9e;
}
.box .discover-modules .discover-module .module-title .refresh text {
  margin-right: 10rpx;
}
.box .discover-modules .discover-module .module-title .refresh .refresh-time-box {
  width: 32rpx;
  height: 32rpx;
  color: #fff;
  background-color: #1d1919;
  border-radius: 4rpx;
}
.box .discover-modules .discover-module .module-item {
  width: 90%;
  margin: 40rpx auto;
  display: flex;
  justify-content: space-between;
}
.box .discover-modules .discover-module .module-item .item-thumb {
  width: 154rpx;
  height: 160rpx;
  border-radius: 8rpx;
  margin-right: 20rpx;
}
.box .discover-modules .discover-module .module-item .item-thumb image {
  width: 100%;
  height: 100%;
}
.box .discover-modules .discover-module .module-item .item-content .item-name {
  font-size: 22rpx;
  color: #504d4d;
}
.box .discover-modules .discover-module .module-item .item-content .item-discount {
  width: 102rpx;
  height: 30rpx;
  border-radius: 14.5rpx;
  border: solid 2rpx #ffd6d6;
  font-size: 20rpx;
  color: #ff4846;
  margin: 10rpx;
  margin-left: 0rpx;
}
.box .discover-modules .discover-module .module-item .item-content .item-pricebox {
  width: 100%;
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.box .discover-modules .discover-module .module-item .item-content .item-pricebox .item-price {
  font-size: 26rpx;
  color: #ff2f2c;
  display: flex;
  align-items: center;
}
.box .discover-modules .discover-module .module-item .item-content .item-pricebox .item-price view {
  font-size: 16rpx;
  color: #ff4846;
}
.box .discover-modules .discover-module .module-item .item-content .item-pricebox .buynum {
  width: 128rpx;
  height: 33rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  background-image: linear-gradient(90deg, #ffffff 0%, #ffeee6 100%), linear-gradient(#ffd6d6, #ffd6d6);
  background-blend-mode: normal, 
                normal;
  border-radius: 0rpx 0rpx 10rpx 0rpx;
  font-family: SourceHanSansCN-Medium;
  font-size: 18rpx;
  color: #ffb466;
}
