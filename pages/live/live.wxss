.box {
  width: 100%;
}
.box .placeholder {
  width: 100%;
  height: 50rpx;
}
.box .header {
  width: 100%;
  background-color: #ec232b;
}
.box .header .nav-bar {
  width: 56%;
  display: flex;
  justify-content: space-between;
  font-size: 42rpx;
  color: #fff;
}
.box .header .nav-bar .van-icon-arrow-left {
  margin-left: 20rpx;
  font-size: 40rpx;
}
.box .van-tabs__scroll {
  background-color: #ec232b;
}
.box .van-tabs__scroll .van-ellipsis {
  color: #fff;
}
.box .van-tabs__scroll .van-tabs__line {
  background-color: #fff;
}
.box .van-tabs__scroll .van-tab--active {
  font-size: 36rpx;
  font-weight: bold;
}
.box .content {
  width: 95%;
  margin: 20rpx auto;
}
.box .content image {
  width: 708rpx;
  height: 358rpx;
  margin: 10rpx 0;
}
.box .notice {
  margin-top: 20rpx;
  width: 100%;
}
.box .notice .notice-title {
  width: 100%;
  display: flex;
  justify-content: center;
}
.box .notice .notice-title view {
  font-size: 30rpx;
  color: #1e1e1e;
  font-weight: bold;
}
.box .notice .notice-title image {
  width: 33rpx;
  height: 36rpx;
  margin-right: 20rpx;
}
.box .time-lines {
  margin-top: 40rpx;
  margin-left: 68rpx;
  display: flex;
  height: 40rpx;
}
.box .time-line-box {
  height: 40rpx;
  margin-bottom: 20rpx;
  display: flex;
  align-items: center;
  justify-content: right;
}
.box .time-line-box .time {
  width: 190rpx;
  height: 40rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  background-color: #f2f2f2;
  border-radius: 19.5rpx;
  font-size: 24rpx;
  color: #606060;
  font-weight: bold;
}
.box .time-line-box .line {
  width: 149rpx;
  height: 1rpx;
  border-bottom: dashed 2rpx #e1e1e1;
}
.box .remind-swiper {
  width: 750rpx;
  height: 550rpx;
}
.box .remind-swiper .remind-box {
  display: flex;
  margin-top: 20rpx;
}
.box .remind-swiper .remind-box .remind {
  margin-right: 30rpx;
}
.box .remind-swiper .swiper-content {
  width: 309rpx;
  height: 430rpx;
  background-color: #ffffff;
  box-shadow: 0rpx 4rpx 15rpx 0rpx rgba(6, 0, 1, 0.1);
  border-radius: 15rpx;
}
.box .remind-swiper image {
  width: 309rpx;
  height: 310rpx;
}
.box .remind-swiper .desc1 {
  width: 100%;
  text-align: center;
  font-size: 27rpx;
  color: #1c1c1c;
}
.box .remind-swiper .desc2 {
  width: 100%;
  text-align: center;
  font-size: 23rpx;
  color: #969696;
}
.box .playback {
  width: 100%;
  margin-top: 40rpx;
}
.box .playback .playback-title {
  width: 100%;
  display: flex;
  justify-content: center;
}
.box .playback .playback-title view {
  font-size: 30rpx;
  color: #1e1e1e;
  font-weight: bold;
}
.box .playback .playback-title image {
  width: 33rpx;
  height: 36rpx;
  margin-right: 20rpx;
}
.box .playback .playback-list {
  width: 90%;
  margin: 0 auto;
  margin-top: 40rpx;
  display: flex;
  justify-content: space-between;
}
.box .playback .pb-item {
  width: 348rpx;
  height: 425rpx;
  background-color: #787878;
  border-radius: 15rpx;
}
.box .playback .pb-item image {
  width: 100%;
  height: 100%;
  object-fit: contain;
}
